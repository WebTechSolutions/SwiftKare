@model WebApp.Models.DoctorTimingsViewModel
@using System.Globalization

@{
    ViewBag.Title = "Doctor Timings";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}


<!-- page content -->
<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>My Scheduler</h3>
        </div>
    </div>

    <div class="clearfix"></div>

   @using (Html.BeginForm("CreateEditTimings", "Doctor"))
   {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DoctorTiming.doctorTimingsID)
        @Html.HiddenFor(model => model.DoctorTiming.doctorID)
        @Html.HiddenFor(model=>model.DoctorTiming.Doctor)

        <div class="form-group">
           
            <label class="control-label col-md-2">Day</label>

            <div class="col-md-10">
               @Html.DropDownListFor(m => m.DoctorTiming.day, Model.Days,new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">From</label>
            
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Timing.From, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Timing.From)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">To</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Timing.To, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Timing.To)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Reset", "DoctorTimings")

            </div>
        </div>
    </div>
   }

    <div class="x_panel">
        <div class="x_title">
            <h2>@ViewBag.Title</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </ul>
            <div class="clearfix"></div>
        </div>


        <div class="x_content">
            <div class="table-responsive">
                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">Day</th>
                            <th class="column-title">From</th>
                            <th class="column-title">To </th>
                            <th class="column-title">Action</th>
                        </tr>
                    </thead>

                    <tbody>

                       
                        @foreach (var item in Model.DoctorTimingsList)
                        {
                            <tr class="even pointer">
                                <td>@Html.DisplayFor(modelItem => item.day)</td>
                                <td>@Html.DisplayFor(modelItem => item.from)</td>
                                <td>@Html.DisplayFor(modelItem => item.to)</td>
                                <td>
                                    @Html.ActionLink("Edit", "EditDoctorTiming", new { id = item.doctorTimingsID })
                                    @Html.ActionLink("Delete", "DeleteDoctorTiming", new { id = item.doctorTimingsID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 </div>
