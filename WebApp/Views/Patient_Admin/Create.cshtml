@model IEnumerable<DataAccess.Patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    td.linebreak {
        width: 50%;
    }
</style>


<div class="page-title">
    <div class="title_left">
        <h3>Create Patient</h3>
    </div>

</div>

<div class="clearfix"></div>
@if (ViewBag.errorMessage == "")
{
    <script>
        $(function () {
            new PNotify({
                title: 'Success',
                text: "@ViewBag.successMessage",
                type: 'info',addclass: 'dark',
                styling: 'bootstrap3'
            });
        });

    </script>
}
@if (ViewBag.successMessage == "")
{

    <script>
        $(function () {
            new PNotify({
                title: 'Error',
                text: "@ViewBag.errorMessage",
                type: 'error',
                styling: 'bootstrap3'
            });
        });
    </script>
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_content">

                <div class="x_title">
                    <h2>Personal Info</h2>

                    <div class="clearfix"></div>
                </div>
                <div class="Create" id="create">

                    @using (Html.BeginForm("Create", "Patient_Admin",
               FormMethod.Post, new { novalidate = "novalidate", @class = "form-horizontal form-label-left" }))
                    {

                        <input name="action" type="text" value="create" style="display:none">
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                First Name <span class="required">*</span>
                            </label>
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                <input class="form-control has-feedback-left" maxlength="50" name="firstname" placeholder="First Name" required="required" style="width: 228px;" type="text">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                Last Name <span class="required">*</span>
                            </label>
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                <input id="clastname" class="form-control has-feedback-left" maxlength="50" name="lastname" placeholder="Last Name" required="required" style="width: 228px;" type="text">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                Email <span class="required">*</span>
                            </label>
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                <input maxlength="30" type="email" id="cemail" name="email" required="required" class="form-control has-feedback-left" placeholder="Email" style="width: 228px;">
                                <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>


                        <div class="item form-group">
                            <label for="password" class="control-label col-md-3">Password</label>
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                <input maxlength="30" id="cpassword" type="password" name="password" class="form-control col-md-7 col-xs-12" required="required" style="width: 228px;">
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <button id="send" type="submit" class="btn btn-success">Submit</button>
                                <button type="reset" class="btn btn-primary" id="create_cancel">Cancel</button>


                            </div>
                        </div>


                    }
                    @* </form>*@
                </div>

                <div class="Edit" style="display:none" id="edit">
                    @using (Html.BeginForm("Create", "Patient_Admin",
               FormMethod.Post, new { novalidate = "novalidate", @class = "form-horizontal form-label-left" }))
                    {
                        <input id="id" name="id" type="number" style="display:none">
                        <input id="userid" name="userid" type="text" style="display:none">
                        <input name="action" type="text" value="edit" style="display:none">
                        @*

                            <div class="item form-group">
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">First Name <span class="required">*</span>
                              </label>
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="efirstname" class="form-control has-feedback-left" data-validate-length-range="6" name="firstname" placeholder="First Name" required="required" type="text">
                                  <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                              </div>
                            </div>
                            <div class="item form-group">
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Last Name <span class="required">*</span>
                              </label>
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="elastname" class="form-control has-feedback-left" data-validate-length-range="6" name="lastname" placeholder="Last Name" required="required" type="text">
                                  <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                              </div>
                            </div>
                            <div class="item form-group">
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Email <span class="required">*</span>
                              </label>
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="email" id="eemail" name="email" required="required" class="form-control has-feedback-left" placeholder="Email">
                                   <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                              </div>
                            </div>*@


                        <div class="item form-group">
                            <label for="password" class="control-label col-md-3">Password</label>
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                <input maxlength="30" id="epassword" type="password" name="password" class="form-control col-md-7 col-xs-12" required="required" style="width: 228px;">
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <button id="editsend" type="submit" class="btn btn-success">Submit</button>
                                <button id="edit_cancel" type="button" class="btn btn-primary">Cancel</button>


                            </div>
                        </div>
                    }


                </div>

            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="display:none">ID</th>
                            <th style="display:none">USERID</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>E-mail</th>
                            @*<th style="display:none">Password</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {

                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="id">@item.patientID</td>
                                    <td class="userid" style="word-break:break-all;width:100px">@item.userId</td>
                                    <td class="firstName" style="word-break:break-all;width:300px">@item.firstName</td>
                                    <td class="lastName" style="word-break:break-all;width:300px">@item.lastName</td>
                                    <td class="email" style="word-break:break-all;width:300px">@item.email</td>
                                    @*<td class="password" style="word-break:break-all;width:300px">@item.password</td>*@
                                    <td style="width:150px">
                                        @using (Html.BeginForm("Create", "Patient_Admin",
                    FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                                        {
                                            <input name="action" type="text" value="delete" style="display:none">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-primary">Action</button>
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                        <a class="editbtn">Reset</a>
                                                    </li>

                                                    <li> <input name="id" type="number" style="display:none" value="@item.patientID"></li>
                                                    <li> <input name="userid" type="text" style="display:none" value="@item.userId"></li>
                                                    <li> <button class="btn btn-link submit" id="delete" type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button></li>

                                                </ul>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        }



                    </tbody>
                </table>

            </div>
        </div>


    </div>
</div>

