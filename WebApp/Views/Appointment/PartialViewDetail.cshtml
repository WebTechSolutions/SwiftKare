@model IEnumerable<DataAccess.SP_GetAppDetail_Result>
@{
    Layout = null;
}
@if (Model != null)
{
    var doctorName = "";
    var age = "";
    var gender = "";
    var languages = "";
    var specialities = "";

    var appDate = "";
    var appTime = "";
    var rov = "";
    var chiefComplaints = "";
    var amount = "";
    var pharmacy = "";
    var cellPhone = "";
    var formattedDate = "";
    foreach (var item in Model)
    {
        doctorName = item.DoctorName;
        age = item.DoctorAge.ToString();
        gender = item.DoctorGender;
        cellPhone = item.pcellPhone;
        appDate = item.appDate;
        appTime = item.appTime;
        rov = item.rov;
        chiefComplaints = item.chiefComplaints;
        amount = item.paymentAmt.ToString();
        pharmacy = item.pharmacy;

        if (item.languageName != "N.A")
        {
            if(languages=="")
            {
                languages= item.languageName + ",";
            }
            else
            {
                languages = languages + item.languageName + ",";
            }

        }

        if (item.specialityName != "N.A")
        {
            if (specialities == "")
            {
                specialities = item.specialityName + ",";
            }
            else
            {
                specialities = specialities + item.specialityName + ",";
            }

        }

    }
    if(appDate!="")
    {
        DateTime date = DateTime.ParseExact(appDate.ToString(), "dd/MM/yyyy", null);
        formattedDate = string.Format("{0:dd MMM, yyyy}", date);
    }




        <div class="modal-header text-center" style="background: #E4F1FE; border-bottom-color: #c3bebe;">
            <h2 style="margin: 0; color: #337ab7"><b>Appoinment Details</b></h2>
        </div><!--/.modal header-->


    <div class="modal-body text-left">
        <div class="user-detail">
            <div class="img-1">
                <img src="../Content/images/img.jpg" alt="" class="m-b-10 img-responsive">
            </div>
            <div class="name-sec">
                <h2>@doctorName</h2>
                <p style="font-size:10px">
                    @age Years <br>@*<span>Gender: @gender</span>*@
                    Gender: @gender<br>
                    Languages: @languages<br>
                    Specialities: @specialities<br>
                    Cell Phone:@cellPhone
                </p>
</div>
        </div>

         <div style="border-bottom: 1px Solid #c3bebe; border-top: 1px Solid #c3bebe; margin: 36px -15px 20px; padding: 10px 21px 0; ">
            <p style="color: #375781;"><span style="width: 150px; float: left;">Appointment Date/Time</span><b>@formattedDate - @appTime</b></p>
        </div>
        @*<div style="border-bottom: 1px Solid #c3bebe; border-top: 1px Solid #c3bebe; margin: 0 -15px 20px; padding: 10px 21px 0; float: left;">
        <p style="color: #375781;"><span style="width: 150px; float: left;">Reason of Visit</span><b>@rov</b></p>
