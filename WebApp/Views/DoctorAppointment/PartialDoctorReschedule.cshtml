@using WebApp.Helper
@model IEnumerable<DataAccess.CustomModels.RescheduleAppModel>
@{
    Layout = null;
}
@if (ViewBag.successMessage == "")
{

    <script>
        $(function () {
           
            new PNotify({
                title: 'Error',
                text: "@ViewBag.errorMessage",
                type: 'error',
                styling: 'bootstrap3'
            });
        });
    </script>
}

@if (Model == null || Model.Count() == 0)
{
    <div class="well">
        There is no rescheduled appointment.
    </div>
}
else
{

    <table id="rescheduledatatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr class="headings">
                <th class="column-title">Patient Name </th>
                <th class="column-title">Appointment Time</th>
                <th class="column-title">Reason of Visit </th>
                <th class="column-title">ChiefComplaint</th>
                <th class="column-title">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="even pointer">
                    <td>@item.PatientName</td>
                    <td>@item.appDate @item.appTime</td>
                    <td>@item.rov</td>
                    <td>@item.chiefComplaints</td>
                    <!-- <td><button class="btn btn-primary btn-sm m-b-0 " type="submit">View</button></td> -->
                    <td>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="#" data-toggle="modal" class="thumbnail-col-innerr" data-id="@item.appID" id="@item.doctorID" data-target="#myModal5" onclick=$("#pvappid").val(@item.appID);>View Detail</a></li>
                                <li><a href="#" class="cancelreschedule" data-id="@item.doctorID" id="@item.appID">Cancel Reschedule Req</a></li>

                            </ul>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}

