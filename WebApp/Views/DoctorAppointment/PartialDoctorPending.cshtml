@using WebApp.Helper
@model IEnumerable<DataAccess.CustomModels.ReschedulePendingAppModel>
@{
    Layout = null;
}


@if (Model == null || Model.Count() == 0)
{
    <div class="well">
        There is no upcoming appointment.
    </div>

}
else
{

    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr class="headings">
                <th class="column-title">Patient Name </th>
                <th class="column-title">Appointment Time</th>
                <th class="column-title">Reason of Visit </th>
                <th class="column-title">ChiefComplaint</th>
                <th class="column-title">Action</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null)
            {
                var j = 1;
                var consultId = 0;
                foreach (var item in Model)
                {
                    consultId = 0;
                    if (item.consultID != null)
                    {
                        consultId = Convert.ToInt32(item.consultID);
                    }
                    <tr class="even pointer">
                        <td>@item.PatientName</td>
                        <td>@item.appDate @item.appTime</td>
                        <td>@item.rov</td>
                        <td>@item.chiefComplaints</td>
                        <!-- <td><button class="btn btn-primary btn-sm m-b-0 " type="submit">View</button></td> -->
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="#" data-toggle="modal" class="thumbnail-col-inner" data-id="@item.appID" id="@item.doctorID" data-target="#myModal5" onclick=$("#pvappid").val(@item.appID);>View Detail</a></li>

                                    <li><a href="#" class="preschedule" data-id="@item.doctorID" id="@item.appID">Reschedule Req</a></li>
                                    <li><a href="#" onclick="callConsult(@consultId,@item.appID)">Complete Consult</a></li>
                                    <li><input type="text" style="display:none" id="consultid" value="@consultId"></li>

                                </ul>
                            </div>
                        </td>
                    </tr>
                    j = j + 1;
                }

            }
        </tbody>
    </table>
}
