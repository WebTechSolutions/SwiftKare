@model IEnumerable<DataAccess.CustomModels.RescheduleAppModel>
@{
    Layout = null;
}


@if (Model == null || Model.Count() == 0)
{
    <div class="well">
        There is no upcoming appointment.
    </div>
   
}
else
{

    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr class="headings">
                <th class="column-title">Patient Name </th>
                <th class="column-title">Appointment Time</th>
                <th class="column-title">Reason of Visit </th>
                <th class="column-title">ChiefComplaint</th>
                <th class="column-title">Action</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null)
            {
                var j = 1;
                foreach (var item in Model)
                {

                    <tr class="even pointer">
                        <td>@item.PatientName</td>
                        <td>@item.appDate @item.appTime</td>
                        <td>@item.rov</td>
                        <td>@item.chiefComplaints</td>
                        <!-- <td><button class="btn btn-primary btn-sm m-b-0 " type="submit">View</button></td> -->
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <span>&nbsp;&nbsp;&nbsp;</span><i class='fa fa-phone' aria-hidden='true'></i>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="#" data-toggle="modal" class="thumbnail-col-inner" data-id="@item.appID" id="@item.doctorID" data-target="#myModal5">View Detail</a></li>
                                  
                                    <li><a href="#" class="reschedule" data-id="@item.doctorID" id="@item.appID">Reschedule Req</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>
                    j = j + 1;
                }

            }
        </tbody>
    </table>
}
