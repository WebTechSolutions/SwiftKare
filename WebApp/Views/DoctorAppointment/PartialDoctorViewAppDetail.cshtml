@model IEnumerable<DataAccess.SP_GetAppDetail_Result>
@{
    Layout = null;
}

@if (Model != null)
{
    var patientName = "";
    var age = "";
    var gender = "";
    var cellPhone = "";
    var languages = "";
    var appDate = "";
    var appTime = "";
    var rov = "";
    var chiefComplaints = "";
    var amount = "";
    var pharmacy = "";
    foreach (var item in Model)
    {
        patientName = item.PatientName;
        age = item.PatientAge.ToString();
        gender = item.PatientGender;
        cellPhone = item.pcellPhone;
        languages = item.languages;
        appDate = item.appDate;
        appTime = item.appTime;
        rov = item.rov;
        chiefComplaints = item.chiefComplaints;
        amount = item.paymentAmt.ToString();
        pharmacy = item.pharmacy;
    }



    <div class="modal-header text-center" style="background: #E4F1FE; border-bottom-color: #c3bebe;">
        <h2 style="margin: 0; color: #337ab7"><b>Appoinment Details</b></h2>
    </div><!--/.modal header-->

    <div class="modal-body text-left">
        <div class="user-detail">
            <div class="img-1">
                <img src="../Content/images/img.jpg" alt="" class="m-b-10 img-responsive">
            </div>
            <div class="name-sec">
                <h2>Patient: @patientName</h2>
                <p>Age: @age Years</p>
                <p>Gender: @gender</p>
                <p id="cellPhone">Cell Phone: @cellPhone</p>
                <p>Languages: @languages</p>
            </div>
        </div>

        <div style="border-bottom: 1px Solid #c3bebe; border-top: 1px Solid #c3bebe; margin: 0 -15px 20px; padding: 10px 21px 0; float: left;">
            <p style="color: #375781;"><span style="width: 150px; float: left;">Appointment Date/Time</span><b>@appDate - @appTime</b></p>
        </div>
        <p id="p_rov" style="color: #375781;"><b>Reason of Visit:</b> @rov</p>
        <p id="p_chiefComplaints" style="color: #375781;"><b>Chief Complaint:</b> @chiefComplaints</p>
        <p id="p_pharmacy" style="color: #375781;"><b>Pharmacy:</b> @pharmacy</p>
        <p id="p_amount" style="color: #375781;"><b>Payment Amount</b> @amount</p>

        @*<label style="font-weight: 300;" for="">Please enter the number we should call</label>
        <input type="text" placeholder="(469)237-3768" style="max-width: 100%;" class="form-control" />*@
        <div class="m-t-10">
            <button id="ueditappointment" onclick=usendVariables($("#doctorid").val(),$("#editappid").val(),this) style="width: 100%; border-radius: 0; padding: 15px 5px; font-size: 20px; display:none" type="button" class="btn btn-primary">Reschedule Request</button>
            <button id="reditappointment" onclick=rsendVariables($("#doctorid").val(),$("#editappid").val(),this) style="width: 100%; border-radius: 0; padding: 15px 5px; font-size: 20px; display:none" type="button" class="btn btn-primary">Cancel Reschedule</button>
            <input type="text" style="display:none" id="editappid">
            <input type="text" style="display:none" id="doctorid">
            @*<button style="width: 100%; border-radius: 0; background: #2AAC39; color: #fff; padding: 15px 5px; font-size: 20px;" class="btn" type="button">ACCEPT</button>
            <button style="width: 100%; border-radius: 0; background: #DB0029; color: #fff; padding: 15px 5px; font-size: 20px;" class="btn" type="button">DECLINE</button>*@
        </div>
    </div><!--/.modal body-->

  
}



