@model IEnumerable<DataAccess.CustomModels.GetPatientUserFiles>
@{
    Layout = null;
}


@if (Model == null || Model.Count() == 0)
{
    <div class="well">
        No document is uploaded by user.
    </div>
}
else
{
    <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr class="headings">
                <th>File </th>
                @*<th>Date Modified </th>*@
                <th>Type </th>
                <th>Size</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                <tr>
                    <td style="border-top: 0;">
                        @item.FileName
                    <a href="javascript:" onclick="downloadFile(@item.fileID)" class="pull-right">Download</a>
                </td>
                @*<td style="border-top: 0;">13-10-216</td>*@
                <td style="border-top: 0;">@item.documentType</td>
                <td style="border-top: 0;">@item.FileSize</td>
                <td style="border-top: 0;">
                    <a href="javascript:" onclick="deleteFile(@item.fileID)">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

